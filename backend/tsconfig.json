{
	"compilerOptions": {
		"target": "ESNext",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"rootDir": "./src",
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
    "emitDecoratorMetadata": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"types": ["node"],
		"baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
	},
	"include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "tests"]
}
